@model Checkpoint_PontoDigital.ViewModel.DepoimentoViewModel;
@{
Html.RenderPartial("_Head");
}

<body>
    <header class="topo_container">
        
        @{
        Html.RenderPartial("_HeaderNavBar",ViewData["User"]);
        }
        <button id="btn_menu"><img src="/~img/menu.png" alt="Menu"></button>
        <section class="banner">
            <img src="~/img/macbook-air-1366x768-apple-macbook-pro-4k-16623.jpg" width="100%" height="770 px" alt="">
        </section>
    </header>
    <section class="dep">
        <h2>Depoimentos</h2>
        <table>
            <thead>
                <tr>

                    <th>Nome</th>
                    <th>Estado</th>
                    <th>Titulo</th>
                    <th>Descrição</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.depoimentos)
                {
                if (item ==null)
                {
                continue;
                }
                <tr>
                    
                    <div class="topico">
                        <td>@item.Nome</td>
                    </div>
                    <div class="topico">
                        <td>@item.Estado</td>
                    </div>
                    <div class="topico">
                        <td>@item.Titulo</td>
                    </div>
                    <div class="topico">
                        <td>@item.Descricao</td>
                    </div>
                        
                </tr>
                }
            </tbody>
        </table>
    </section>
    <section class="contato">
        <h2>Contato</h2>
        <div class="contato_content">
            <p><img src="img/telefone.png" height="20px" width="20px" alt=""> Tel: (11) 7454-9665</p>
            <p><img src="img/email.png" height="20px" width="20px" alt=""> E-mail: pontodigital@outlook.com</p>
            <p><img src="img/location.png" height="25px" width="20px" alt=""> Endereço: Avenida Paulista,nº21 - SP</p>
        </div>
    </section>

    </html>
</body>

</html>